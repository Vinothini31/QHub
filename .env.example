# ========== DJANGO ==========
DJANGO_SECRET_KEY=your-random-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,your-backend.onrender.com

# ========== DATABASE ==========
# Leave empty for SQLite (default), or use PostgreSQL for production
DATABASE_URL=postgresql://user:password@localhost:5432/qhub

# ========== GEMINI API ==========
GEMINI_API_KEY=your-google-gemini-api-key-here

# ========== CORS ==========
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ========== JWT ==========
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# ========== EMAIL (optional) ==========
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ========== LOGGING ==========
DJANGO_LOG_LEVEL=INFO

# ========== AUTH USER MODEL ==========
AUTH_USER_MODEL=users.CustomUser

# ========== FRONTEND URL ==========
REACT_APP_API_URL=https://your-backend-api.onrender.com
